<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>
<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

  <% @post.comments.each do |comment| %>
    <p><%= comment.title %></p>
    <p><%= comment.content %></p>
    <hr>

 
<% end %>
<% unless @post.user == current_user%>
   <%= form_with model: [@post, @post.comments.build] do |form| %>
    <p>
      <%= form.label :title %>
      <%= form.text_field :title %>
    </p>
    <p>
      <%= form.label :content %>
      <%= form.text_area :content %>
    </p>

    <p>
      <%= form.submit %>
    </p>
  <% end %>
<% end %>
    
